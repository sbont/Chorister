chorister.co, www.chorister.co {
	tls stevenbontenbal@yahoo.com

	handle_path /api/* {
		rewrite * /api{path}
		reverse_proxy localhost:8090
	}

	handle_path /test {
		respond "Hello, world!"
	}

	handle {
		encode gzip

		root * /chorister/www
		try_files {path} /index.html
		file_server
	}

	log {
		level debug
	}
}

login.chorister.co {
	tls stevenbontenbal@yahoo.com
	reverse_proxy h2c://localhost:9000
}
